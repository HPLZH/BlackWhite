<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:BW_Mobile.Properties"
             x:Class="BW_Mobile.DebugPage"
             Title="{x:Static resources:Resources.DebugPage_Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label FontSize="Subtitle" Text="{x:Static resources:Resources.DebugPage_Version}"></Label>
                <Label x:Name="version"></Label>
                <Label></Label>
                <Label FontSize="Subtitle" Text="{x:Static resources:Resources.DebugPage_Device}"></Label>
                <Label x:Name="device"></Label>
                <Label></Label>
                <Label FontSize="Subtitle" Text="{x:Static resources:Resources.DebugPage_Language}"></Label>
                <Label x:Name="langResources"></Label>
                <Label x:Name="langCurrent"></Label>
                <Label x:Name="langCurrentUI"></Label>
                <Label></Label>
                <Label FontSize="Subtitle" Text="{x:Static resources:Resources.DebugPage_ScreenSize}"></Label>
                <Label x:Name="size"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>