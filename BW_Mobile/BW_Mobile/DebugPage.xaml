<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:BW_Mobile.Properties"
             x:Class="BW_Mobile.DebugPage"
             Title="调试信息">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label FontSize="Subtitle">版本</Label>
                <Label x:Name="version"></Label>
                <Label></Label>
                <Label FontSize="Subtitle">平台</Label>
                <Label x:Name="paltform"></Label>
                <Label></Label>
                <Label FontSize="Subtitle">设备类型</Label>
                <Label x:Name="idiom"></Label>
                <Label></Label>
                <Label FontSize="Subtitle">语言</Label>
                <Label x:Name="langResources"></Label>
                <Label x:Name="langCurrent"></Label>
                <Label x:Name="langCurrentUI"></Label>
                <Label></Label>
                <Label FontSize="Subtitle">屏幕尺寸</Label>
                <Label x:Name="size"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>